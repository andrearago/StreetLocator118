<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.ListaComuniActivity"
    tools:showIn="@layout/activity_comuni">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Seleziona il comune per visualizzare le vie"
            android:id="@+id/textView"
            android:layout_alignTop="@+id/listViewComuni"
            android:layout_alignLeft="@+id/listViewComuni"
            android:layout_alignStart="@+id/listViewComuni"
            android:layout_alignRight="@+id/listViewComuni"
            android:layout_alignEnd="@+id/listViewComuni"
            android:padding="30px" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewComuni"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:choiceMode="singleChoice"
            android:scrollingCache="false" />
    </LinearLayout>

</RelativeLayout>
